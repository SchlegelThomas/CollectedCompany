@model CollectedCompany.Models.ProfileViewModel

@{
    ViewBag.Title = "Profile";
}
<section class="breadcrumb-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-xs-6">
                <h2>My Account</h2>
                <p>Account Dashboard</p>
            </div>
            <div class="col-xs-6">
                <ol class="breadcrumb">
                    <li><a href="index.html">Home</a></li>
                    <li><a href="my-account.html">My Account</a></li>
                    <li class="active">Account Dashboard</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content account">
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <aside class="sidebar">

                    <!-- WIDGET:CATEGORIES - START -->
                    <div class="widget widget-navigation">
                        <ul class="nav nav-pills nav-stacked">
                            <li>@Html.ActionLink("My Account", "Dashboard", "Account")</li>
                            <li class="active">@Html.ActionLink("Personal Information", "Profile", "Account")</li>
                            <li>@Html.ActionLink("My Addresses", "Addresses", "Account")</li>
                            <li>@Html.ActionLink("My Orders", "Orders", "Account")</li>
                            <li>@Html.ActionLink("Wislist", "Wishlist", "Account")</li>
                            <li>@Html.ActionLink("My Team", "Teams", "Account")</li>
                            <li>@Html.ActionLink("My Contests", "Contests", "Account")</li>
                        </ul>
                    </div>
                    <!-- WIDGET:CATEGORIES - END -->

                </aside>
            </div>
            <div class="col-sm-9">
                <article class="account-content">

                    <div class="account-profile-top">
                        <div><img src="assets/images/default-avatar.png" alt=""></div>
                        <div><h3>John Doe <small>johndoe@umarket.com</small></h3></div>
                        <div class="button"><a href="#" class="btn btn-primary">Change Avatar</a></div>
                    </div>

                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-4 col-lg-3 control-label">First Name<span class="required">*</span></label>
                            <div class="col-md-8 col-lg-6">
                                <input type="text" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-lg-3 control-label">Last Name<span class="required">*</span></label>
                            <div class="col-md-8 col-lg-6">
                                <input type="text" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-lg-3 control-label">Email<span class="required">*</span></label>
                            <div class="col-md-8 col-lg-9">
                                <input type="email" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-lg-3 control-label">Phone<span class="required">*</span></label>
                            <div class="col-md-8 col-lg-9">
                                <input type="text" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div class="form-group">
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-lg-3 control-label">Password<span class="required">*</span></label>
                            <div class="col-md-8 col-lg-9">
                                <input type="password" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-lg-3 control-label">New Password<span class="required">*</span></label>
                            <div class="col-md-8 col-lg-9">
                                <input type="password" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-lg-3 control-label">Confirm New Password<span class="required">*</span></label>
                            <div class="col-md-8 col-lg-9">
                                <input type="password" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-8 col-lg-offset-3 col-lg-9">
                                <button type="submit" class="btn btn-primary">Update</button>
                            </div>
                        </div>
                    </form>

                </article>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
