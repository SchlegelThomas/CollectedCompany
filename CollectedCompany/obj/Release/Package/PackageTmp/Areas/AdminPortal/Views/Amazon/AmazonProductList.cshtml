@using CollectedCompany.Extensions
@using Nager.AmazonProductAdvertising.Model

@{
    ViewBag.Title = "Amazon Product Importer";
    Layout = "~/Areas/AdminPortal/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/Admin/Amazon.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="row">
        <h2>Amazon Product List</h2>
    </div>
    <input type="hidden" id="CategoryId" />
    <input type="hidden" id="ResponseGroupId" />
    <div class="row" id="SearchRow">
        <div class="col-lg-6">
            <div class="form-group input-group">
                <input type="text" id="SearchTerms" placeholder="Search..." class="form-control input-lg" />
                <span class="input-group-btn">
                    <button id="Search" class="btn btn-lg btn-blue">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>

        </div>
        <div class="col-lg-3">
            @{
                var listOfTypes = Enum.GetValues(typeof(AmazonSearchIndex));
            }
            <section id="Categories">
                <div class="btn-group">
                    <button type="button" id="Category" class="btn btn-default btn-lg dropdown-toggle" data-toggle="dropdown">
                        Category
                        <span class="fa fa-caret-down"></span>
                    </button>
                    <ul class="dropdown-menu scrollable-menu" role="menu">
                        @foreach (var type in listOfTypes)
                        {
                            var displayName = ((AmazonSearchIndex)type).ToString();
                            <li>
                                <a class="category-select" data-id="@((int) type)">@displayName</a>
                            </li>
                        }
                    </ul>
                </div>
            </section>
        </div>
        <div class="col-lg-3">
            @{
                var listOfResponseGroups = Enum.GetValues(typeof(AmazonResponseGroup));
            }
            <section id="ResponseCategory">
                <div class="btn-group">
                    <button type="button" id="ResponseGroup" class="btn btn-default btn-lg dropdown-toggle" data-toggle="dropdown">
                        Search Type
                        <span class="fa fa-caret-down"></span>
                    </button>
                    <ul class="dropdown-menu scrollable-menu" role="menu">
                        @foreach (var type in listOfResponseGroups)
                        {
                            var displayName = ((AmazonResponseGroup)type).ToString();
                            <li>
                                <a class="response-select" data-id="@((int) type)">@displayName</a>
                            </li>
                        }
                    </ul>
                </div>
            </section>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12" id="SearchResults">



        </div>
    </div>
</div>
@section Scripts
{

    <script src="~/Areas/AdminPortal/Scripts/Apps/Amazon/AmazonProductList.js"></script>
}