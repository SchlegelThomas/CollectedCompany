@model CollectedCompany.Models.Application.Settings
<section id="SettingsDashboard">
    <div class="container-fluid">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-12">
                    <h1>
                        Settings
                    </h1>
                </div>
            </div>
            <div class="col-lg-12 card" id="FocusSection">
                <div class="col-lg-8 center-div card">
                    <h1 class="text-center">Storefront</h1>
                    <h3 class="text-center">This is how we contact you, the business owner.</h3>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="control-label" for="LegalBusinessName">Licensed Business Name</label>
                                <input type="text" class="form-control" id="LegalBusinessName" placeholder="Something Inc, llc. 200X" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-10">
                            <div class="form-group">
                                <label class="control-label" for="Address">Address</label>
                                <input type="text" class="form-control" id="Address" placeholder="101 CoCo Way" />
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="form-group">
                                <label class="control-label" for="Address2">Apt, suite, etc.</label>
                                <input type="text" class="form-control" id="Address2" placeholder="#4" />
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="form-group">
                                <label class="control-label" for="State1">State</label>
                                <select type="text" class="form-control" id="State1"></select>
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="form-group">
                                <label class="control-label" for="City1">City</label>
                                <select type="text" class="form-control" id="City1"></select>
                            </div>
                        </div>

                        <div class="col-lg-2">
                            <div class="form-group">
                                <label class="control-label" for="Zip1">Zip</label>
                                <input type="text" class="form-control" id="Zip1" placeholder="12345" />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="control-label" for="ContactEmail">Personal Email</label>
                                <input type="text" class="form-control" id="ContactEmail" placeholder="owner@gmail.com" />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="control-label" for="ContactPhone">Contact Phone</label>
                                <input type="text" class="form-control" id="ContactPhone" placeholder="(xxx)-xxx-xxxx" />
                            </div>
                        </div>
                        <button class="btn btn-primary save-btn" id="SaveStoreFront">Save Me!</button>
                    </div>
                </div>
                <div class="col-lg-8 center-div card margin-top-20">
                    <h1 class="text-center">Store Address</h1>
                    <h3 class="text-center">This is for customers to contact your business.</h3>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="control-label" for="BusinessName">Business Name</label>
                                <input type="text" class="form-control" id="BusinessName" placeholder="Best. Store. Ever." />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-10">
                            <div class="form-group">
                                <label class="control-label" for="Street">Street Address</label>
                                <input type="text" class="form-control" id="Street" placeholder="Right down the road" />
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="form-group">
                                <label class="control-label" for="Street2">Apt, suite, etc.</label>
                                <input type="text" class="form-control" id="Street2" placeholder="#1" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-5">
                            <div class="form-group">
                                <label class="control-label" for="State">State</label>
                                <select type="text" class="form-control" id="State"></select>
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="form-group">
                                <label class="control-label" for="City">City</label>
                                <select type="text" class="form-control" id="City"></select>
                            </div>
                        </div>

                        <div class="col-lg-2">
                            <div class="form-group">
                                <label class="control-label" for="Zip">Zip</label>
                                <input type="text" class="form-control" id="Zip" />
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="control-label" for="Phone">Phone</label>
                                <input type="text" class="form-control" id="Phone" placeholder="(xxx)-xxx-xxxx" />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="control-label" for="CustomerEmail">Email for Customers</label>
                                <input type="text" class="form-control" id="CustomerEmail" placeholder="email@support.com"/>
                            </div>
                        </div>
                        <button class="btn btn-primary save-btn" id="SaveStoreAddress">Save Me!</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts{

    <script src="~/Areas/AdminPortal/Scripts/Admin/settings.js"></script>
}