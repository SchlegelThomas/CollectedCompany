@model CollectedCompany.Models.Application.Settings
<section id="SettingsDashboard">
    <div class="container-fluid">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-12">
                    <h1>
                        Settings
                    </h1>
                </div>
            </div>
            <div class="col-lg-12 card" id="FocusSection">
                @Html.HiddenFor(x => x.StoreFront.StoreAddress.Id, new { Id = "StoreAddressId" })
                @Html.HiddenFor(x => x.StoreFront.Id, new { Id = "StorefrontId" })
                @Html.HiddenFor(x => x.Id, new { Id = "SettingsId" })
                <div class="col-lg-8 center-div card">
                    <h1 class="text-center">Storefront</h1>
                    <h3 class="text-center">This is how we contact you, the business owner.</h3>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="control-label" for="LegalBusinessName">Licensed Business Name</label>
                                @Html.TextBoxFor(x => x.StoreFront.BusinessName, new { placeholder = "Something Inc, llc. 20xx", Id = "LegalBusinessName", @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-10">
                            <div class="form-group">
                                <label class="control-label" for="Address">Personal Address</label>
                                @Html.TextBoxFor(x => x.StoreFront.Address, new { placeholder = "11 Dreary Lane", Id = "Address", @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="form-group">
                                <label class="control-label" for="Address2">Apt, suite, etc.</label>
                                @Html.TextBoxFor(x => x.StoreFront.Address2, new { placeholder = "#4", Id = "Address2", @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="form-group">
                                <label class="control-label" for="State1">State</label>
                                @Html.DropDownListFor(x => x.StoreFront.State, new List<SelectListItem>(), new { placeholder = "VA", Id = "State1", @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="form-group">
                                <label class="control-label" for="City1">City</label>
                                @Html.DropDownListFor(x => x.StoreFront.City, new List<SelectListItem>(), new { placeholder = "VA", Id = "City1", @class = "form-control" })
                            </div>
                        </div>

                        <div class="col-lg-2">
                            <div class="form-group">
                                <label class="control-label" for="Zip1">Zip</label>
                                @Html.TextBoxFor(x => x.StoreFront.Zip, new { placeholder = "11598", Id = "Zip1", @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="control-label" for="ContactEmail">Personal Email</label>
                                @Html.TextBoxFor(x => x.StoreFront.ContactEmail, new { placeholder = "owner@gmail.com", Id = "ContactEmail", @class = "form-control", type = "email" })
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="control-label" for="ContactPhone">Contact Phone</label>
                                @Html.TextBoxFor(x => x.StoreFront.ContactPhone, new { placeholder = "(xxx)-xxx-xxxx", Id = "ContactPhone", @class = "form-control", type = "tel" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 center-div card margin-top-20">
                    <h1 class="text-center">Store Address</h1>
                    <h3 class="text-center">This is for customers to contact your business.</h3>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="control-label" for="BusinessName">Business Name</label>
                                @Html.TextBoxFor(x => x.StoreFront.StoreAddress.LegalNameOfBusiness, new {placeholder = "Best. Store. Ever.", Id = "BusinessName", @class = "form-control", type = "text"})
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-10">
                            <div class="form-group">
                                <label class="control-label" for="Street">Street Address</label>
                                @Html.TextBoxFor(x => x.StoreFront.StoreAddress.Street, new {placeholder = "Right Down the road", Id = "Street", @class = "form-control", type = "text"})
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="form-group">
                                <label class="control-label" for="Street2">Apt, suite, etc.</label>
                                @Html.TextBoxFor(x => x.StoreFront.StoreAddress.Street2, new {placeholder = "1", Id = "Street2", @class = "form-control", type = "text"})
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-5">
                            <div class="form-group">
                                <label class="control-label" for="State">State</label>
                                @Html.DropDownListFor(x => x.StoreFront.StoreAddress.State, new List<SelectListItem>(), new {placeholder = "VA", Id = "State", @class = "form-control"})
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="form-group">
                                <label class="control-label" for="City">City</label>
                                @Html.DropDownListFor(x => x.StoreFront.StoreAddress.City, new List<SelectListItem>(), new {placeholder = "Palmyra", Id = "City", @class = "form-control"})
                            </div>
                        </div>

                        <div class="col-lg-2">
                            <div class="form-group">
                                <label class="control-label" for="Zip">Zip</label>
                                @Html.TextBoxFor(x => x.StoreFront.StoreAddress.Zip, new {placeholder = "11598", Id = "Zip", @class = "form-control"})
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="control-label" for="Phone">Phone</label>
                                @Html.TextBoxFor(x => x.StoreFront.StoreAddress.PhoneNumber, new {placeholder = "(xxx)-xxx-xxxx", Id = "Phone", @class = "form-control", type = "tel"})
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="control-label" for="CustomerEmail">Email for Customers</label>
                                @Html.TextBoxFor(x => x.StoreFront.StoreAddress.Email, new {placeholder = "email@support.com", Id = "CustomerEmail", @class = "form-control", type = "email"})
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary save-btn" id="SaveStoreFront">Save Changes</button>
            </div>
        </div>
    </div>
</section>



@section Scripts{

    <script src="~/Areas/AdminPortal/Scripts/Admin/settings.js"></script>
}