<section id="ThemeImageDashboard">
    <div class="container-fluid">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-12">
                    <h1>
                        Settings
                    </h1>
                </div>
            </div>
            <div class="col-lg-12 card" id="FocusSection">
                <div class="col-lg-8 center-div card">
                    <h1 class="text-center">Upload Theme Image</h1>
                    <h3 class="text-center">Image Management</h3>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label class="control-label" for="Theme">Theme Name</label>
                                <input type="text" id="Theme" />
                            </div>
                        </div>
                    </div>
                    <div class="row"style="margin-top: 20px;">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label for="ThemeImage" class="btn btn-primary" id="ThemeImageLabel">
                                    Upload Theme Image
                                </label>
                                <input type="file" id="ThemeImage" name="files" placeholder="Upload Theme" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary save-btn" id="Save">Save Changes</button>
            </div>
        </div>
    </div>
</section>
<style type="text/css">
    .card {
        min-height: 400px;
    }
     #ThemeImageLabel, #ThemeImage {
         position: absolute;
         bottom: 10px;
         width: 240px;
         height: 32px;
         color: white;
         background-color: #7b68ee;
         font-weight: 500;
         font-size: 1.3em;
     }
     #ThemeImage {
         display: none;
     }

</style>


@section Scripts{

    <script src="~/Areas/AdminPortal/Scripts/Admin/themeUploader.js"></script>
}